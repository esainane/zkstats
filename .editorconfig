# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space

# Makefile must use tab indentation
[Makefile]
indent_style = tab

# 4 space indentation
[*.{{ba,}sh,py}]
indent_size = 4

# All JS to use 2-space indentation
[*.{{j,t}s{,x},scss}]
indent_style = space
indent_size = 2
